<%= form_with model: @task, local: true do |form| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Error(s) occurred:</h4>
      <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-outline mb-4">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-outline mb-4">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-outline mb-4">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Task.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "form-control" %>
  </div>
  <div>
    <%= form.submit 'Save Task', class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to 'Back', tasks_path, class: "btn btn-secondary mt-2" %>
