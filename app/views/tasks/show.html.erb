<%= render 'nav' %>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mt-5">
        <div class="row g-0">
          <!-- Left side of the card -->
          <div class="col-md-6 p-4" style="background:#cddff0;">
            <!-- Task details -->
            <h1 class="card-title"><%= @task.title %></h1>

            <div class="mb-3">
              <strong>Description:</strong><br>
              <!-- Format description with paragraphs -->
              <%= @task.description %>
            </div>

            <div class="mb-3">
              <strong>Status:</strong><br>
              <!-- Display human-readable status -->
              <%= @task.status.humanize %>
            </div>

            <!-- Action buttons -->
            <div class="btn-group" role="group" aria-label="Task actions">
              <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
              <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
            </div>
          </div>

          <!-- Right side of the card -->
          <div class="col-md-6">
            <!-- Task image -->
            <%= image_tag 'clock.jpg', class: 'card-img-top', alt: 'Task Image' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
