<div class="d-flex justify-content-center mt-4">
  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <h5 class="card-title text-center">Profile Information</h5>
       <% if @user.avatar.attached? %>
      <%= image_tag @user.avatar, class: "img-thumbnail mb-3", style: "width:150px;height:150px;" %>
      <% else %>
        <%= image_tag "profile_pic.webp", class: "img-thumbnail mb-3  mx-auto"  %>
      <% end %>
      <p class="card-text"><strong>First Name:</strong> <%= @user.first_name %></p>
      <p class="card-text"><strong>Last Name:</strong> <%= @user.last_name %></p>
      <p class="card-text"><strong>Mobile Number:</strong> <%= @user.mobile_number %></p>
      <p class="card-text"><strong>Date of Birth:</strong> <%= @user.date_of_birth %></p>
      <p class="card-text"><strong>Email:</strong> <%= @user.email %></p>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to 'Edit Profile', edit_user_registration_path(@user), class: 'btn btn-secondary' %>
        <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
